{
  "name": "vertical-trpc-monorepo-sst",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "api/*",
    "features/*",
    "shared/*",
    "web"
  ],
  "scripts": {
    "build": "sst build",
    "clear:node_modules": "npkill",
    "console": "sst console",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:api": "sst dev",
    "dev:web": "pnpm --filter web dev",
    "deploy": "sst deploy",
    "remove": "sst remove",
    "lint": "eslint . --max-warnings 0",
    "sort-packages": "sort-package-json \"package.json\" \"web/package.json\" \"features/*/package.json\" \"shared/*/package.json\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@tsconfig/vite-react": "^1.0.1",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "aws-cdk-lib": "2.62.2",
    "concurrently": "^7.6.0",
    "constructs": "10.1.156",
    "eslint": "^8.35.0",
    "eslint-plugin-monorepo-cop": "^1.0.2",
    "npkill": "^0.10.0",
    "prettier": "2.8.4",
    "sort-package-json": "^2.4.1",
    "sst": "2.2.1",
    "typescript": "^4.9.5"
  }
}
