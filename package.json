{
  "name": "vertical-trpc-monorepo-sst",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "api/*",
    "features/*",
    "shared/*",
    "web"
  ],
  "scripts": {
    "build": "sst build",
    "clear:node_modules": "npkill",
    "console": "sst console",
    "depcheck": "npx depcheck ./",
    "deploy": "sst deploy",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:api": "sst dev",
    "dev:web": "pnpm --filter web dev",
    "lint": "eslint . --max-warnings 0",
    "remove": "sst remove",
    "sort-packages": "sort-package-json \"package.json\" \"api/*/package.json\" \"features/*/package.json\" \"shared/*/package.json\" \"web/package.json\"",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --write ./**/*.{js,jsx,ts,tsx,json,md,css,scss,html,mdx}"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@tsconfig/vite-react": "^1.0.1",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "aws-cdk-lib": "2.69.0",
    "concurrently": "^7.6.0",
    "constructs": "10.1.282",
    "eslint": "^8.36.0",
    "eslint-plugin-monorepo-cop": "^1.0.2",
    "npkill": "^0.11.0",
    "prettier": "2.8.4",
    "sort-package-json": "^2.4.1",
    "sst": "2.2.2",
    "typescript": "^5.0.2"
  }
}
